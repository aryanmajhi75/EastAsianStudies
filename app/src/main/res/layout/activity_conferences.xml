<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Conferences">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:fitsSystemWindows="true"
        android:theme="@style/Theme.EastAsiaStudiesApplication">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_conference"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:fitsSystemWindows="true"
            app:collapsedTitleTextAppearance="@style/Theme.EastAsiaStudiesApplication"
            app:contentScrim="@drawable/background"
            app:expandedTitleTextAppearance="@style/Theme.EastAsiaStudiesApplication"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="Conferences">

            <ImageView
                android:layout_width="256dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/conference1"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />


        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_shape"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <!---->
        <!--        <androidx.constraintlayout.widget.ConstraintLayout-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:padding="30dp">-->
        <RelativeLayout
            android:id="@+id/RL1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewConference1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/RL1"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="22dp"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/textViewConference"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/RL1"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/textViewConferenceH1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/textViewConference"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/textViewConferenceL1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/textViewConferenceH1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/textViewConferenceH2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/textViewConferenceL1"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/textViewConferenceL2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/textViewConferenceH2"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/textViewConferenceH3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/textViewConferenceL2"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:ignore="NotSibling" />
            <TextView
                android:id="@+id/textViewConferenceL3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/textViewConferenceH3"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                tools:ignore="NotSibling" />


            <TextView
                android:id="@+id/textViewConferenceH4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/textViewConferenceL3"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:ignore="NotSibling" />
            <TextView
                android:id="@+id/textViewConferenceL4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/textViewConferenceH4"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/textViewConferenceH5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/textViewConferenceL4"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:ignore="NotSibling" />
            <TextView
                android:id="@+id/textViewConferenceL5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/textViewConferenceH5"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                tools:ignore="NotSibling" />

        </RelativeLayout>


        <!--        </androidx.constraintlayout.widget.ConstraintLayout>-->

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/phd_conference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:backgroundTint="#F1C68C"
        android:baselineAlignBottom="false"
        android:clickable="true"
        app:maxImageSize="36dp"
        android:src="@drawable/phd"
        app:fabSize="normal"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="end|bottom" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/pg_conference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="96dp"
        android:backgroundTint="#F1C68C"
        app:maxImageSize="28dp"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:src="@drawable/pg"
        app:fabSize="normal"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="end|bottom" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ug_conference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="176dp"
        android:backgroundTint="#F1C68C"
        app:maxImageSize="28dp"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:src="@drawable/ug"
        app:fabSize="normal"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="end|bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>